@attribute [Microsoft.AspNetCore.Components.RouteAttribute(UrlHelper.PHASE_ACTIVITE)]

@using Training.Helpers
@using Training.Models

@using Training.Services
@using Microsoft.EntityFrameworkCore
@using Radzen.Blazor

@inject IDbContextFactory<TrainingDbContext> dbContextFactory

<ReferenceGridEditor Items="@PhaseActivites" TItem="PhaseActivite" DbContext="dbContext"  Title="Phase d'activité de la séance">
    <Columns>
        <RadzenDataGridColumnA Width="150px" TItem="PhaseActivite" Property="@(nameof(PhaseActivite.Nom))">
            <EditTemplate Context="PhaseActivite">
                <RadzenTextBox @bind-Value="PhaseActivite.Nom" Style="width:100%; display: block;" />
            </EditTemplate>
        </RadzenDataGridColumnA>
    </Columns>
</ReferenceGridEditor>