@attribute [Microsoft.AspNetCore.Components.RouteAttribute(UrlHelper.TYPE_ACTIVITE)]

@using Training.Helpers
@using Training.Models

@using Training.Services
@using Microsoft.EntityFrameworkCore
@using Radzen.Blazor

@inject IDbContextFactory<TrainingDbContext> dbContextFactory

<ReferenceGridEditor Items="@TypeActivites" TItem="TypeActivite" DbContext="dbContext"  Title="Type d'Activité dans la phase">
    <Columns>
        <RadzenDataGridColumnA Width="150px" TItem="TypeActivite" Property="@(nameof(TypeActivite.Nom))">
            <EditTemplate Context="typeActivite">
                <RadzenTextBox @bind-Value="typeActivite.Nom" Style="width:100%; display: block;" />
            </EditTemplate>
        </RadzenDataGridColumnA>
        
    </Columns>
</ReferenceGridEditor>